
@using MECS.WebApp.MVC.Interfaces
@inject IUser AppUser


<ul class="navbar-nav">
  @if (AppUser.IsAuthenticated())
  {
    <li class="nav-item ">
      <a class="nav-link" title="Manage">Olá @AppUser.GetUserEmail()</a>
    </li>
    <li class="nav-item">
      <a class="nav-link text-dark" asp-controller="Identity" asp-action="Logout">Sair</a>
    </li>
  }
  else
  {
    <li class="nav-item" style="padding-right:30px">
      <a class="btn btn-success" asp-controller="Identity" asp-action="SignUp">Criar conta</a>
    </li>
    <li class="nav-item">
      <a class="btn btn-primary" asp-controller="Identity" asp-action="SignIn">Login</a>
    </li>
  }
</ul>